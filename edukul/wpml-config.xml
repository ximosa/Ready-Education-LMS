<wpml-config>
    
    <!-- Custom VC Shortcodes -->
    <shortcodes>
        <shortcode>
            <tag>headings</tag>
            <attributes>
                <attribute>heading</attribute>
                <attribute>subheading</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>buttons</tag>
            <attributes>
                <attribute>text</attribute>
            </attributes>  
        </shortcode>
        <shortcode>
            <tag>testimonials</tag>
            <attributes>
                <attribute>text</attribute>
                <attribute>name</attribute>
                <attribute>position</attribute>
            </attributes>
        </shortcode>
         <shortcode>
            <tag>accordion</tag>
            <attributes>
                <attribute>heading</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>actionbox</tag>
            <attributes>
                <attribute>heading_text</attribute>
                <attribute>subheading_text</attribute>
                <attribute>button_text</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>menulist</tag>
            <attributes>
                <attribute>text</attribute>
                <attribute>value</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>infolist</tag>
            <attributes>
                <attribute>title</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>imagebox</tag>
            <attributes>
                <attribute>heading</attribute>
                <attribute>description</attribute>
                <attribute>button_text</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>iconbox</tag>
            <attributes>
                <attribute>heading</attribute>
                <attribute>description</attribute>
                <attribute>button_text</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>advlist</tag>
            <attributes>
                <attribute>content</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>pricetable</tag>
            <attributes>
                <attribute>heading</attribute>
                <attribute>price</attribute>
                <attribute>price_unit</attribute>
                <attribute>button_text</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>featurebox</tag>
            <attributes>
                <attribute>heading</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>counter</tag>
            <attributes>
                <attribute>number</attribute>
                <attribute>number_prefix</attribute>
                <attribute>number_suffix</attribute>
                <attribute>heading</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>fancytext</tag>
            <attributes>
                <attribute>text1</attribute>
                <attribute>text2</attribute>
                <attribute>text3</attribute>
                <attribute>text4</attribute>
                <attribute>text5</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>subscribe</tag>
            <attributes>
                <attribute>heading</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>dtab</tag>
            <attributes>
                <attribute>title</attribute>
            </attributes>
        </shortcode>
    </shortcodes>

</wpml-config>